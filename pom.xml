				         </repository>
	     <snapshotRepository>
		             <id>otofactory-snap</id>
			             <name>otofactory-snapshots</name>
				             <url>http://otofactory-givv.rhcloud.com/artifactory/libs-snapshot-local</url>
					         </snapshotRepository>
					 </distributionManagement>
</project>
